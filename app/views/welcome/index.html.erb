<!-- app/views/welcome/index.html.erb -->
<div class="container">
  <div class="content">
    <p>LifePlanを考えるお手伝いをします</p>
    <p>あなたと身近な人の年齢を比べてみましょう</p>

    <%= form_with(model: @person, url: people_path, method: :post) do |form| %>
      <%= form.label :name, '名前' %>
      <%= form.text_field :name %>

      <%= form.label :birth_year, '生まれ年（西暦）' %>
      <%= form.number_field :birth_year, min: 1900, max: Date.today.year %>

      <%= form.submit '保存する' %>
    <% end %>
  </div>

  <!-- 登録一覧サイドバー -->
  <div class="sidebar">
    <h2>登録一覧</h2>
    <ul>
      <% @people.each do |person| %>
        <li><%= person.name %>（<%= person.birth_year %>年生まれ）</li>
      <% end %>
    </ul>
  </div>
</div>
