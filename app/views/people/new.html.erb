<!-- app/views/people/new.html.erb -->

<h1>他の人の情報を入力</h1>

<%= form_with model: @person, url: people_path do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :birth_year %>
    <%= form.number_field :birth_year %>
  </div>

  <div class="actions">
    <%= form.submit '保存する' %>
  </div>
<% end %>
