<!-- app/views/sessions/new.html.erb -->

<div class="container">
  <div class="content">
    <h1>ログイン</h1>

    <%= form_with(model: @user, url: login_path) do |form| %>
      <div class="form-group">
        <%= form.label :name, '名前' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password, 'パスワード' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :birth_year, '生まれ年（西暦）' %>
        <%= form.number_field :birth_year, min: 1900, max: Date.today.year, class: 'form-control' %>
      </div>

      <%= form.submit 'ログインする', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
